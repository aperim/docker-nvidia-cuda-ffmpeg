#!/usr/bin/env bash
set -e

if [[ -z "${UID}" ]]; then
  UID=1000
else
  usermod -u ${UID} ffmpeg
fi

if [[ -z "${GID}" ]]; then
  GID=1000
else
  groupmod -g ${GID} ffmpeg
fi

if [[ -z "${KEEPRUNNING}" ]]; then
  KEEPRUNNING=0
fi

if [[ -z "${COOLDOWN}" ]]; then
  COOLDOWN=5
fi

if [[ -z "${PRESCRIPT}" ]]; then
  PRESCRIPT="echo \"ğŸ¬ Starting\""
fi

if [[ -z "${POSTSCRIPT}" ]]; then
  POSTSCRIPT="echo \"ğŸ Finished\""
fi

chown -R ${UID}:${GID} /etc/ffmpeg

start () {
  local pid
  if [[ -x "/usr/bin/ffmpeg" ]]; then
    # first arg is `-f` or `--some-option`
    if [ "${1#-}" != "$1" ]; then
      echo >&2 "ğŸ“º Starting ffmpeg with arguments \"$@\""
      # sudo --preserve-env -H -u ffmpeg -- "/usr/bin/ffmpeg" "$@" &
      sudo --preserve-env -H -u ffmpeg -- bash -c '/usr/bin/ffmpeg "$@" || true </dev/null' ffmpeg-run "$@" &
      pid=$!
    else
      echo >&2 "ğŸ“º Executing ${@}"
      sudo --preserve-env -H -u ffmpeg -- bash -c 'exec "$@" || true </dev/null' bash-run "$@" &
      pid=$!
    fi
    echo >&2 "ğŸ•´ï¸ Waiting for process ${pid} to finish"
    wait ${pid}
  else
    echo >&2 "ğŸ›‘ No ffmpeg executable"
  fi
}

pre () {
  local pid
  sudo --preserve-env -H -u ffmpeg -- bash -c "${PRESCRIPT}" &
  pid=$!
  echo >&2 "ğŸ•´ï¸ Pre process running as ${pid}"
  wait ${pid}
}

post () {
  sudo --preserve-env -H -u ffmpeg -- bash -c "${POSTSCRIPT}" &
  pid=$!
  echo >&2 "ğŸ•´ï¸ Post process running as ${pid}"
  wait ${pid}
}

cooldown () {
    echo >&2 "â³ Cooling down"
    sleep ${COOLDOWN}
}

engage () {
  pre
  start $@
  post
  if [ "$KEEPRUNNING" != "0" ] && [ "${KEEPRUNNING^^}" != "FALSE" ]
  then
    cooldown
  fi
}

if [ "$KEEPRUNNING" != "0" ] && [ "${KEEPRUNNING^^}" != "FALSE" ]
then
  echo >&2 "ğŸ¤– Keep running enabled"
  while :
  do
    engage $@
  done
else
  engage $@
fi
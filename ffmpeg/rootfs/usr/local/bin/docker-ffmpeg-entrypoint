#!/usr/bin/env bash
set -e

if [[ -z "${UID}" ]]; then
  UID=1000
else
  usermod -u ${UID} ffmpeg
fi

if [[ -z "${GID}" ]]; then
  GID=1000
else
  groupmod -g ${GID} ffmpeg
fi

if [[ -z "${KEEPRUNNING}" ]]; then
  KEEPRUNNING=0
fi

if [[ -z "${COOLDOWN}" ]]; then
  COOLDOWN=5
fi

if [[ -z "${PRESCRIPT}" ]]; then
  PRESCRIPT="echo \"ğŸ¬ Starting\""
fi

if [[ -z "${POSTSCRIPT}" ]]; then
  POSTSCRIPT="echo \"ğŸ Finished\""
fi

chown -R ${UID}:${GID} /etc/ffmpeg

start () {
  if [[ -x "/usr/bin/ffmpeg" ]]; then
    # first arg is `-f` or `--some-option`
    if [ "${1#-}" != "$1" ]; then
      echo >&2 "ğŸ“º Starting ffmpeg with settings \"$@\""
      sudo --preserve-env -H -u ffmpeg -- "/usr/bin/ffmpeg" "$@"
    else
      echo >&2 "ğŸ“º Executing \"$@\""
      sudo --preserve-env -H -u ffmpeg -- bash -c "$@" 
    fi
  else
    echo >&2 "ğŸ›‘ No ffmpeg executable"
  fi
}

pre () {
  sudo --preserve-env -H -u ffmpeg -- bash -c "${PRESCRIPT}"
}

post () {
  sudo --preserve-env -H -u ffmpeg -- bash -c "${POSTSCRIPT}"
}

cooldown () {
    echo >&2 "â³ Cooling down"
    sleep 5 
}

engage () {
  pre
  start $@
  post
  if [ "$KEEPRUNNING" != "0" ] && [ "${KEEPRUNNING^^}" != "FALSE" ]
  then
    cooldown
  fi
}

if [ "$KEEPRUNNING" != "0" ] && [ "${KEEPRUNNING^^}" != "FALSE" ]
then
  while :
  do
    echo >&2 "ğŸ¤– Keep running enabled"
    engage $@
  done
else
  engage $@
fi